<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wheogus.house.dao.MinusMapper">


    <select id="selectMinus" parameterType="MinusDto" resultType="Integer">
        select sum(minusM)
        from minus
        where mid = #{mid}
    </select>
    
    <select id="select" parameterType="MinusDto" resultType="MinusDto">
        select minusM, content
        from minus
        where md = #{md}
    </select>

    <select id="findById" parameterType="MinusDto" resultType="MinusDto">
        select minusM
        from minus
        where mid = #{mid}
    </select>

</mapper>